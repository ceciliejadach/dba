          <span>Trin 2</span>
        </div>
        <div class="step" id="step3">
          <div class="dot"></div>
          <span>Trin 3</span>
        </div>
        <div class="step" id="step4">
          <div class="dot"></div>
          <span>Trin 4</span>
        </div>
        <div class="step" id="step5">
          <div class="dot"></div>
          <span>Trin 5</span>
        </div>
      </div>

      <div class="text-content">
        <section id="section1">
          <div class="wrapper">
            <div class="container">
              <div class="figure">
                <div class="circle"></div>
                <div class="line"></div>
              </div>
              <div class="content">
                <div class="text-box">
                  <p>Trin 1 - Information om din annonce</p>
