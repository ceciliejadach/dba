---
import "../styles/style.css";

const { url, page } = Astro.props;
---

<ol class="breadcrumbnav">
  <li><a href={url}>{page}</a></li>
  <slot />
</ol>

<style>
  .breadcrumbnav {
    list-style: none;
    margin-left: 0.5rem;
    margin-bottom: 2rem;
  }

  .breadcrumbnav li {
    display: inline-block;
  }

  .breadcrumbnav li:last-child::after {
    content: " > ";
    color: var(--dark-grey-100);
    padding-left: 5px;
  }

  a {
    text-decoration: none;
    color: var(--dark-grey-100);
  }

  a:hover {
    text-decoration: underline;
  }
</style>
