---
import "../styles/style.css";

import Marquee from "./Marquee.astro";
import PrimaryIconButton from "./PrimaryIconButton.astro";
import TertiaryIconButton from "./TertiaryIconButton.astro";
import FavoritNavigationButton from "./FavoritNavigationButton.astro";
---

<div class="navigation">
  <Marquee />
  <nav class="nav_bar">
    <a href="/"><img src="/png/dba-logo.png" alt="dba logo" width="100" height="55" /></a>
    <div class="search">
      <input class="search_input" type="search" placeholder="Søg på hele DBA" />
      <img class="search_icon" src="/svg/search.svg" alt="search ikon" width="40" height="32" />
    </div>
    <img class="notification-ikon" src="/svg/bell.svg" alt="klokke" />
    <ul class="desktop_nav">
      <li><PrimaryIconButton url="/adannonce" background="/svg/plus.svg" hover="/svg/blue-plus.svg" /></li>
      <li>
        <TertiaryIconButton background="/svg/box.svg" hover="/svg/blue-box.svg" text="Køb fragt" />
      </li>
      <li>
        <TertiaryIconButton background="/svg/profile.svg" hover="/svg/blue-profile.svg" text="Mit DBA" url="/mitdba" />
      </li>
      <li>
        <FavoritNavigationButton id="heart-icon" background="/svg/heart.svg" hover="/svg/blue-heart.svg" text="Favoritter" />
      </li>
    </ul>
    <ul id="mobile_nav">
      <li>
        <img src="/svg/box.svg" alt="box" />
        <p>Køb fragt</p>
      </li>

      <li>
        <img src="/svg/profile.svg" alt="profile" />
        <a href="/mitdba">Mit DBA</a>
      </li>
      <li>
        <img src="/svg/heart.svg" alt="heart" />
        <p>Favoritter</p>
      </li>
    </ul>
  </nav>
  <div class="cta-btn">
    <PrimaryIconButton url="/adannonce" background="/svg/plus.svg" hover="/svg/blue-plus.svg" />
  </div>
</div>

<style>
  ul li {
    list-style: none;
  }
  a {
    white-space: nowrap;
  }

  a img {
    width: 100px;
  }

  #small-img {
    width: 20px;
  }

  .search {
    width: max-content;
    display: flex;
    align-items: center;
    padding: 14px;
    border-radius: 28px;
    background-color: var(--light-grey-100);
    height: 40px;
    width: 300px;
  }

  .search img {
    max-width: 20px;
  }

  .search_input {
    font-size: var(--h4-mobile);
    font-weight: 500;
    color: var(--dark-grey-100);
    margin-right: 14px;
    border: none;
    outline: none;
    background: transparent;
    flex: 1;
  }

  .notification-ikon {
    width: 40px;
    cursor: pointer;
  }

  .nav_bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
    margin-bottom: 40px;
    padding-inline: 0.2rem;
    box-shadow: rgba(33, 35, 38, 0.1) 0px 10px 10px -10px;
    gap: 10px;
  }

  .navigation {
    position: sticky;
    top: 0;
    z-index: 10;
    background-color: var(--main-white);
  }

  /* @media (min-width: 868px) {
    .nav_bar {
      gap: 0;
    }
  } */

  .nav_bar ul {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  #mobile_nav {
    display: none;
  }

  .cta-btn {
    display: none;
  }

  @media (max-width: 868px) {
    .nav_bar .desktop_nav {
      display: none;
    }

    .cta-btn {
      display: block;
      position: fixed;
      bottom: 65px;
      z-index: 10;
      display: grid;
      justify-items: center;
      width: 100%;
    }

    #mobile_nav {
      background: var(--light-grey-100);
      position: fixed;
      bottom: 0;
      left: 0;
      display: flex;
      justify-content: space-around;
      align-items: center;
      width: 100%;
      z-index: 10;
      padding-top: 10px;
    }
    #mobile_nav li {
      list-style: none;
      display: grid;
      justify-items: center;
    }
    #mobile_nav li p,
    #mobile_nav li a {
      font-size: 1rem;
      color: var(--dark-blue-100);
      text-decoration: none;
    }
    #mobile_nav img {
      max-width: 27px;
    }
  }
</style>
