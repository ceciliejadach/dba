---
import "../styles/style.css";
import Button from "./Button.astro";
---

<nav class="nav_bar">
  <a href="/"><img src="./png/dba-logo.png" alt="dba logo" /></a>
  <div class="search">
    <input class="search_input" type="search" placeholder="Søg på hele DBA" />
    <img class="search_icon" src="./svg/search.svg" alt="search ikon" />
  </div>
  <ul class="desktop_nav">
    <Button variant="primary" size="small"><img src="./svg/plus.svg" alt="plus" /><a href="#">Opret annoce</a></Button>
    <Button variant="tertiary" size="small"><img src="./svg/box.svg" alt="box" />Køb fragt</Button>
    <Button variant="tertiary" size="small"><img src="./svg/heart.svg" alt="heart" />Favoritter</Button>
    <Button variant="tertiary" size="small"><img src="./svg/profile.svg" alt="profile" /><a id="blue_link" href="#">Login</a></Button>
  </ul>
  <ul id="mobile_nav">
    <li>
      <img src="./svg/box.svg" alt="box" />
      <p>Køb fragt</p>
    </li>
    <li>
      <img src="./svg/heart.svg" alt="heart" />
      <p>Favoritter</p>
    </li>
    <li>
      <img src="./svg/category.svg" alt="category" />
      <p>Kategorier</p>
    </li>
    <li>
      <img src="./svg/profile.svg" alt="profile" />
      <a href="#">Login</a>
    </li>
  </ul>
</nav>
<div class="cta-btn">
  <Button variant="primary" size="small"><img src="./svg/plus.svg" alt="plus" /><a href="#">Opret annoce</a></Button>
</div>

<style>
  #blue_link {
    color: var(--dark-blue-100);
  }

  a img {
    width: 100px;
  }

  .search {
    width: max-content;
    display: flex;
    align-items: center;
    padding: 14px;
    border-radius: 28px;
    background-color: var(--light-grey-100);
    height: 40px;
    width: 300px;
  }

  .search img {
    max-width: 20px;
  }

  .search_input {
    font-size: 1rem;
    font-weight: 500;
    color: var(--dark-grey-100);
    margin-right: 14px;
    border: none;
    outline: none;
    background: transparent;
    flex: 1;
  }
  .nav_bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 50px;
    margin-bottom: 120px;
    padding-inline: 0.2rem;
  }

  .nav_bar ul {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  #mobile_nav {
    display: none;
  }

  .cta-btn {
    display: none;
  }

  @media only screen and (max-width: 886px) {
    .nav_bar .desktop_nav {
      display: none;
    }

    .cta-btn {
      display: block;
      position: fixed;
      bottom: 65px;
      left: 32%;
      z-index: 10;
    }

    #mobile_nav {
      display: block;
      background: var(--light-grey-100);
      position: fixed;
      bottom: 0;
      left: 0;
      display: flex;
      justify-content: space-around;
      align-items: center;
      width: 100%;
      z-index: 10;
      padding-top: 10px;
    }
    #mobile_nav li {
      list-style: none;
      display: grid;
      justify-items: center;
    }
    #mobile_nav li p,
    #mobile_nav li a {
      font-size: 1rem;
      color: var(--dark-blue-100);
      text-decoration: none;
    }
    #mobile_nav img {
      max-width: 27px;
    }
  }
</style>
