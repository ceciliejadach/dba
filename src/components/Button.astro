---
const { variant, size, url } = Astro.props;
---

<a href={url}>
  <button class={variant + " " + size}>
    <slot />
  </button>
</a>

<style>
  a {
    text-decoration: none;
  }
  button {
    cursor: pointer;
  }

  /* styling af primær knap (CTA) */
  .primary {
    background-color: var(--dark-blue-100);
    color: var(--primary-btn-text-color);
    display: flex;
    border-radius: 20px;
    appearance: none;
    justify-content: center;
    border: none;
    padding: 8px 20px;
    align-items: center;
    transition: 0.2s;
  }

  /* styling af sekundær knap */
  .secondary {
    border: 1px solid var(--dark-blue-100);
    background-color: transparent;
    border-radius: 25px;
    appearance: none;
    padding: 8px 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--dark-blue-100);
  }

  /* styling af tertiære knap  */
  .tertiary {
    padding: 8px 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--dark-blue-100);
    background-color: transparent;
    border: none;
  }

  /* styling størrelse af knap til mobil  */
  .small {
    font-size: var(--p-desktop);
  }

  .medium {
    font-size: var(--h3-desktop);
    width: 250px;
    padding-top: 10px;
    padding-bottom: 10px;
  }

  /* styling størrelse af knap til desktop  */
  .large {
    font-size: 1rem;
    width: 250px;
  }

  .xl {
    width: 400px;
  }
</style>
